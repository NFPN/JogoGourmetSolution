<Window x:Class="JogoGourmet.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jogo Gourmet" Height="200" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Resources/question_mark.png" Width="50" Height="50" Margin="0,10" />
            <TextBlock Text="Pense em um prato que você gosta" FontSize="14" TextAlignment="Center" Margin="0,10" TextWrapping="Wrap" Width="350" />
            <Button Name="btnOk" Content="OK" Width="75" Height="30" Margin="0,10" Click="btnOk_Click" />
        </StackPanel>
    </Grid>
</Window>
