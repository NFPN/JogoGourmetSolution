<Window x:Class="JogoGourmet.Views.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pergunta" Height="200" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Resources/question_mark.png" Width="50" Height="50" />
            <TextBlock Name="txtPergunta" Text="Pergunta" FontSize="14" TextAlignment="Center" Margin="0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnSim" Content="Sim" Width="75" Margin="10,0" Click="btnSim_Click" />
                <Button Name="btnNao" Content="Não" Width="75" Margin="10,0" Click="btnNao_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
