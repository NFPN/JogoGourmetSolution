        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrada" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="txtMensagem" Text="Mensagem" FontSize="14" TextAlignment="Center" Margin="0,10" />
            <TextBox Name="txtResposta" Width="300
                     " Margin="0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnOk" Content="OK" Width="75" Margin="10,0" Click="btnOk_Click" />
                <Button Name="btnCancelar" Content="Cancelar" Width="75" Margin="10,0" Click="btnCancelar_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
